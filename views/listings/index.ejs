<% layout("/layouts/boilerplate") %>
  <body>
    <style>
      .filters-container {
        position: relative;
      }

      #filters {
        display: flex;
        gap: 1rem;
        align-items: center;
        padding: 0.5rem;
        scroll-behavior: smooth;
        padding-left: 2.5rem;
        padding-right: 2.5rem;
      }

      .filter {
        text-align: center;
        opacity: 0.7;
        min-width: 70px;
        flex: 0 0 auto;
      }

      .filter p {
        font-size: 0.8rem;
      }

      .filter:hover {
        opacity: 1;
        cursor: pointer;
      }

      
      .tax-toggle {
        flex: 0 0 auto;
        min-width: 200px;
        border: 1px solid black;
        border-radius: 1rem;
        height: 3.5rem;
        padding: 1rem;
        margin-left: 0.7rem;
        display: flex;
        align-items: center;
      }

      
      @media (max-width: 768px) {
        #filters {
          flex-wrap: nowrap;
          overflow-x: auto;
          scrollbar-width: none;
          -webkit-overflow-scrolling: touch;
        }

        #filters::-webkit-scrollbar {
          display: none;
        }

        .scroll-btn {
          display: none;
        }
      }

      @media (min-width: 769px) {
        #filters {
          flex-wrap: nowrap;
          overflow-x: auto;
          scrollbar-width: none;
        }

        #filters::-webkit-scrollbar {
          display: none;
        }
      }

      .scroll-btn {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        background: white;
        border: none;
        font-size: 1.5rem;
        cursor: pointer;
        padding: 0.3rem 0.6rem;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        z-index: 10;
        opacity: 0.8;
      }

      .scroll-btn:hover {
        opacity: 1;
      }

      .scroll-left {
        left: 0;
      }

      .scroll-right {
        right: 0;
      }

      .tax-info {
        display: none;
      }
    </style>
    <div class="filters-container">
      <button class="scroll-btn scroll-left" onclick="scrollFilters(-200)">&#10094;</button>
      <div id="filters">
        <div class="filter"><i class="fa-solid fa-fire"></i>
          <p>Trending</p>
        </div>
        <div class="filter"><i class="fa-solid fa-bed"></i>
          <p>Rooms</p>
        </div>
        <div class="filter"><i class="fa-solid fa-mountain-city"></i>
          <p>Iconic City</p>
        </div>
        <div class="filter"><i class="fa-solid fa-mountain"></i>
          <p>Mountain</p>
        </div>
        <div class="filter"><i class="fa-solid fa-chess-rook"></i>
          <p>Castles</p>
        </div>
        <div class="filter"><i class="fa-solid fa-person-swimming"></i>
          <p>Amazing Pool</p>
        </div>
        <div class="filter"><i class="fa-solid fa-campground"></i>
          <p>Camping</p>
        </div>
        <div class="filter"><i class="fa-solid fa-cow"></i>
          <p>Farms</p>
        </div>
        <div class="filter"><i class="fa-solid fa-snowflake"></i>
          <p>Arctic</p>
        </div>
        <div class="filter"><i class="fa-solid fa-igloo"></i>
          <p>Domes</p>
        </div>
        <div class="filter"><i class="fa-solid fa-sailboat"></i>
          <p>Boats</p>
        </div>
        <div class="tax-toggle">
          <div class="form-check-reverse form-switch">
            <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
            <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
          </div>
        </div>
      </div>
      <button class="scroll-btn scroll-right" onclick="scrollFilters(200)">&#10095;</button>
    </div>
    <div class="container">
      <div data-aos="zoom-in">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 g-4 mt-1">
          <% for (let listing of allListing) { %>
            <div class="col" data-aos="fade-up">
              <div class="card h-100 listing-card">
                <a href="/listings/<%= listing._id %>" class="text-decoration-none text-dark">
                  <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image"
                    style="height: 20rem; object-fit: cover;">
                  <div class="card-img-overlay"></div>
                  <div class="card-body">
                    <p class="card-text">
                      <b>
                        <%= listing.title %>
                      </b><br />
                      â‚¹<%= Number(listing.price).toLocaleString("en-IN") %> /Night
                        <i class="tax-info"> &nbsp; &nbsp;+18% GST</i>
                    </p>
                  </div>
                </a>
              </div>
            </div>
            <% } %>
        </div>
      </div>
    </div>
    <script>
      let taxSwitch = document.getElementById("flexSwitchCheckDefault");
      taxSwitch.addEventListener("click", () => {
        let taxInfo = document.getElementsByClassName("tax-info");
        for (info of taxInfo) {
          if (info.style.display != "inline") {
            info.style.display = "inline"
          } else {
            info.style.display = "none"
          }
        }
      })
      function scrollFilters(amount) {
        document.getElementById("filters").scrollBy({ left: amount, behavior: "smooth" });
      }
    </script>
  </body>