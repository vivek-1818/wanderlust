<% layout("/layouts/boilerplate") %>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <br><br>
    <h3>Create a new Listing</h3>
    <form action="/listings" method="post" class="needs-validation" novalidate enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input name="listings[title]" type="text" placeholder="Enter title" class="form-control" required>
                <div class="invalid-feedback">
                    Please Enter Valid title
                </div>
        </div>
        
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listings[description]" placeholder="Enter description" class="form-control" required></textarea>
                <div class="invalid-feedback">
                    Enter short description
                </div>
        </div>
        
        <div class="mb-3">
            <label for="image" class="form-label">Upload Listing Image</label>
            <input name="listings[image]" type="file" placeholder="Enter image URL/Link" class="form-control" required>
        </div>
        
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input name="listings[price]"  placeholder="Enter Price" class="form-control" required>
                <div class="invalid-feedback">
                    Please Enter Valid price
                </div>
            </div>
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input name="listings[country]" type="text" placeholder="Enter Country" class="form-control" required>
                <div class="invalid-feedback">
                    Please Enter Valid Country
                </div>
            </div>
        </div>
        
        
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input name="listings[location]" type="text" placeholder="Enter location" class="form-control" required>
                <div class="invalid-feedback">
                    Please Enter Valid Location
                </div>
        </div>
        <button class="btn btn-dark add-btn">Add</button>
        <br><br>
    </form>
    </div>
    </div>
</body>
